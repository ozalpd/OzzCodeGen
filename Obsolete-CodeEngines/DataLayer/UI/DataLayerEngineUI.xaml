<local:AbstractEngineUI x:Class="OzzCodeGen.CodeEngines.DataLayer.UI.DataLayerEngineUI"
                        xmlns:local="clr-namespace:OzzCodeGen.UI"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        mc:Ignorable="d"
                        d:DesignHeight="300" d:DesignWidth="840">
    <Border BorderBrush="#FF9090AF" Padding="2" Margin="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" MaxWidth="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" MaxWidth="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="24"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
                <Button Name="btnRenderTemplate" Content="Render Template" 
                        HorizontalAlignment="Left" Width="120" 
                        Click="btnRenderTemplate_Click"/>
                <ComboBox ItemsSource="{Binding Templates}" SelectedItem="{Binding SelectedTemplate}" Width="184" Margin="8,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="1">
                <Button Name="btnRenderAllTemplates" Content="Render All Templates" 
                        HorizontalAlignment="Left" Width="120" Height="24" 
                        Click="btnRenderAllTemplates_Click"/>
                <Button Name="btnRefresh" Content="Refresh" 
                        HorizontalAlignment="Left" Width="120" Height="24" Margin="8,0,0,0" 
                        Click="btnRefresh_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3" Grid.Row="2">
                <CheckBox IsChecked="{Binding RenderAllEntities}" Content="All Entities" VerticalAlignment="Center" ToolTip="Render for every entity in the model." />
                <CheckBox Content="Overwrite Existing Files" Margin="8,0,0,0" VerticalAlignment="Center" IsChecked="{Binding OverwriteExisting}" />
                <CheckBox Content="Use DisplayName Attrib" Margin="8,0,0,0" VerticalAlignment="Center" IsChecked="{Binding UseDisplayName}" />
            </StackPanel>
            <TextBlock Text="Namespace:" Grid.Column="2" Grid.Row="0" Margin="4,0,0,0"/>
            <TextBox Text="{Binding NamespaceName, Mode=TwoWay}" 
                     Grid.Column="3" Grid.Row="0"
                     Height="24" 
                     Margin="4,0,0,0"/>

            <TextBlock Text="ViewModel Namespace:" Grid.Column="2" Grid.Row="1" Margin="4,0,0,0"/>
            <TextBox Text="{Binding ViewModelNamespace, Mode=TwoWay}" 
                     Grid.Column="3" Grid.Row="1"
                     Height="24" 
                     Margin="4,0,0,0"/>

            <TextBlock Text="Target Folder:" ToolTip="Target folder for generated metadata class files" Grid.Column="4" Grid.Row="0" Margin="4,0,0,0"/>
            <TextBox Text="{Binding TargetFolder, Mode=TwoWay}"
                     ToolTip="{Binding TargetDirectory}"
                     Grid.Column="5" Grid.Row="0"
                     Height="24" 
                     Margin="4,0,0,0"/>

            <TextBlock Text="Target Cust. Directory:" 
                       ToolTip="Target folder for custom class files" 
                       Grid.Column="4" Grid.Row="2" 
                       Margin="4,0,0,0"/>
            <TextBox Text="{Binding CustFilesFolder, Mode=TwoWay}" 
                     ToolTip="{Binding CustFilesDirectory}" 
                     Grid.Column="5" Grid.Row="2"
                     Height="24" 
                     Margin="4,0,0,0"/>

            <TextBlock Text="Target VM Folder:" 
                       ToolTip="Target folder for ViewModel files" 
                       Grid.Column="4" Grid.Row="1" Margin="4,0,0,0"/>
            <TextBox Text="{Binding ViewModelsFolder, Mode=TwoWay}"
                     ToolTip="{Binding ViewModelsDirectory}"
                     Grid.Column="5" Grid.Row="1"
                     Height="24" 
                     Margin="4,0,0,0"/>



            <Grid Grid.Row="4" Grid.RowSpan="4" Grid.ColumnSpan="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MaxWidth="640"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DataGrid Name="grdEntitySettings" ItemsSource="{Binding Entities, Mode=TwoWay}" 
                      SelectedItem="{Binding CurrentEntitySetting, Mode=TwoWay}"
                      AutoGeneratedColumns="grdEntitySettings_AutoGeneratedColumns"
                      CanUserDeleteRows="False" 
                      CanUserAddRows="False"  
                      AutoGeneratingColumn="grdEntitySettings_AutoGeneratingColumn">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Name="mnuEntityOptions"  Header="Options" IsEnabled="False" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>

            <GridSplitter Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="8" />

            <Grid DataContext="{Binding SelectedItem, ElementName=grdEntitySettings}" 
                  Grid.Row="8" Grid.ColumnSpan="2"
                  Grid.Column="2" Margin="8,0,0,0">

                <DataGrid Name="grdPropertySettings"
                          ItemsSource="{Binding Properties, Mode=TwoWay}"
                          Grid.Row="2" 
                          CanUserAddRows="False" CanUserDeleteRows="False" 
                          AutoGeneratedColumns="grdPropertySettings_AutoGeneratedColumns" 
                          AutoGeneratingColumn="grdEntitySettings_AutoGeneratingColumn">

                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Name="mnuPropertyOptions"  Header="Options" IsEnabled="False" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>
        </Grid>
        </Grid>
    </Border>
</local:AbstractEngineUI>
