<Window x:Class="OzzCodeGen.Wpf.Dialogs.SelectEngine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Code Generation Engine" Height="140" Width="260" ResizeMode="NoResize" ShowInTaskbar="False">

    <Grid DataContext="{Binding ElementName=window, Mode=OneWay}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <ComboBox Name="cboEngines" 
                      ItemsSource="{Binding Engines, Mode=OneWay}"
                      SelectedItem="{Binding SelectedEngine, Mode=TwoWay}"
                      Width="232" Margin="5" SelectionChanged="cboEngines_SelectionChanged"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right">
            <Button Name="btnAccept" Content="OK" Width="72" Margin="5" IsDefault="True" IsEnabled="False" Click="btnAccept_Click"/>
            <Button Name="btnCancel" Content="Cancel" Width="72" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
