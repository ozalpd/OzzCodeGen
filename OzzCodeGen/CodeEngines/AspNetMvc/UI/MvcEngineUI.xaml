<local:AbstractEngineUI x:Class="OzzCodeGen.CodeEngines.AspNetMvc.UI.MvcEngineUI"
                        xmlns:local="clr-namespace:OzzCodeGen.UI"
                        xmlns:System="clr-namespace:System;assembly=mscorlib"
                        xmlns:AspNetMvc="clr-namespace:OzzCodeGen.CodeEngines.AspNetMvc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="900">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="mvcViewTypes" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="AspNetMvc:MvcViewType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Border BorderBrush="#FF9090AF" Padding="2" Margin="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" MaxWidth="132"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" MaxWidth="132"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition Height="28"/>
                <RowDefinition Height="28"/>
                <RowDefinition Height="28"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
                <Button Name="btnRenderTemplate" Content="Render Template" 
                        HorizontalAlignment="Left" Width="120" Height="24" 
                        Click="btnRenderTemplate_Click"/>
                <ComboBox ItemsSource="{Binding Templates}" SelectedItem="{Binding SelectedTemplate}" Width="164" Height="24" Margin="8,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="1">
                <Button Name="btnRenderAllTemplates" Content="Render All Templates" 
                        HorizontalAlignment="Left" Width="120" Height="24" 
                        Click="btnRenderAllTemplates_Click"/>
                <Button Name="btnRefresh" Content="Refresh" Grid.Row="2"
                        Margin="8,0,0,0"
                        HorizontalAlignment="Left" Width="120" Height="24"
                        Click="btnRefresh_Click"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="2">
                <CheckBox IsChecked="{Binding RenderAllEntities}" Content="All Entities" VerticalAlignment="Center" Width="120" ToolTip="Render for every entity in the model." />
                <!--
                <CheckBox Content="Overwrite Existing Files" Margin="4,0,0,0" VerticalAlignment="Center" IsChecked="{Binding OverwriteExisting}" />
                -->
            </StackPanel>

            <TextBlock Text="Models Namespace:" Grid.Column="2" Grid.Row="0" Margin="4,0,0,0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding ModelsNamespace, Mode=TwoWay}" 
                     Grid.Column="3" Grid.Row="0"
                     Height="24" 
                     Margin="4,0,0,0"/>

            <TextBlock Text="Target Project Folder:" Grid.Column="4" Grid.Row="0" Margin="4,0,0,0" VerticalAlignment="Center"/>
            <TextBox Name="txtTargetDirectory" Text="{Binding TargetFolder, Mode=TwoWay}" 
                     ToolTip="{Binding TargetDirectory}"
                     Grid.Row="0" Grid.Column="5"
                     Height="24" 
                     Margin="4,0,0,0"/>

            <TextBlock Text="Controllers Namespace:" Grid.Column="2" Grid.Row="1" Margin="4,0,0,0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding ControllersNamespace, Mode=TwoWay}" 
                     Grid.Column="3" Grid.Row="1"
                     Height="24" 
                     Margin="4,0,0,0"/>

            <TextBlock Text="Controllers Folder:" Grid.Column="4" Grid.Row="1" Margin="4,0,0,0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding TargetControllersFolder, Mode=TwoWay}"
                     ToolTip="{Binding TargetControllersDir}"
                     Grid.Column="5" Grid.Row="1"
                     Height="24" 
                     Margin="4,0,0,0"/>

            <TextBlock Text="Views Namespace:" Grid.Column="2" Grid.Row="2" Margin="4,0,0,0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding ViewsNamespace, Mode=TwoWay}" 
                     Grid.Column="3" Grid.Row="2"
                     Height="24" 
                     Margin="4,0,0,0"/>

            <TextBlock Text="Views Folder:" Grid.Column="4" Grid.Row="2" Margin="4,0,0,0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding TargetViewsFolder, Mode=TwoWay}" 
                     ToolTip="{Binding TargetViewsDir}"
                     Grid.Column="5" Grid.Row="2"
                     Height="24" 
                     Margin="4,0,0,0"/>

            <TextBlock Text="ViewModels Namespace:" Grid.Column="2" Grid.Row="3" Margin="4,0,0,0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding ViewModelsNamespace, Mode=TwoWay}" 
                     Grid.Column="3" Grid.Row="3"
                     Height="24" 
                     Margin="4,0,0,0"/>

            <!-- Grid of data grids -->
            <Grid Grid.Row="8" Grid.ColumnSpan="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Name="grdEntitySettings" ItemsSource="{Binding Entities, Mode=TwoWay}" 
                          SelectedItem="{Binding CurrentEntitySetting, Mode=TwoWay}"
                          AutoGeneratedColumns="grdEntitySettings_AutoGeneratedColumns"
                          CanUserDeleteRows="False" CanUserAddRows="False"
                          AutoGeneratingColumn="grdEntitySettings_AutoGeneratingColumn">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Name="mnuEntityOptions"  Header="Reset All Required Msgs" Click="mnuEntityOptions_Click" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                    <Grid DataContext="{Binding SelectedItem, ElementName=grdEntitySettings}"
                          Grid.Column="1" Margin="4,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="16"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"/>
                            <RowDefinition Height="22"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding Name}" Grid.ColumnSpan="2" Grid.Row="0"
                                   ToolTip="{Binding Name}"
                                   VerticalAlignment="Stretch"
                                   TextAlignment="Center"
                                   FontWeight="Bold">
                            <TextBlock.Background>
                                <RadialGradientBrush>
                                    <GradientStop Color="White" Offset="0"/>
                                    <GradientStop Color="#FFE6E6E6" Offset="1"/>
                                </RadialGradientBrush>
                            </TextBlock.Background>
                        </TextBlock>


                        <TextBlock Text="Generate" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Center" TextAlignment="Center">
                            <TextBlock.Background>
                                <RadialGradientBrush>
                                    <GradientStop Color="White" Offset="0"/>
                                    <GradientStop Color="#FFE6E6E6" Offset="1"/>
                                </RadialGradientBrush>
                            </TextBlock.Background>
                        </TextBlock>

                        <TextBlock Text="Controllers:" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"/>
                        <CheckBox IsChecked="{Binding GenerateController}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>

                        <TextBlock Text="Index View:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                        <CheckBox IsChecked="{Binding IndexView}" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>

                        <TextBlock Text="Details View:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                        <CheckBox IsChecked="{Binding DetailsView}" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"/>

                        <TextBlock Text="Create View:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                        <CheckBox IsChecked="{Binding CreateView}" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"/>

                        <TextBlock Text="Edit View:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                        <CheckBox IsChecked="{Binding EditView}" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center"/>

                        <TextBlock Text="" Grid.ColumnSpan="2" Grid.Row="7" VerticalAlignment="Center" TextAlignment="Center">
                            <TextBlock.Background>
                                <RadialGradientBrush>
                                    <GradientStop Color="White" Offset="0"/>
                                    <GradientStop Color="#FFE6E6E6" Offset="1"/>
                                </RadialGradientBrush>
                            </TextBlock.Background>
                        </TextBlock>

                        <TextBlock Text="Overwrite Existing:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center"/>
                        <CheckBox IsChecked="{Binding OverwriteExisting}" Grid.Row="8" Grid.Column="1" VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
                <GridSplitter Grid.Column="1" Grid.RowSpan="4" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="8" />

                <Grid DataContext="{Binding SelectedItem, ElementName=grdEntitySettings}" Grid.Column="1" Margin="8,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="6"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <DataGrid Name="grdPropertySettings"
                              ItemsSource="{Binding Properties, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Name}" Header="Property Name" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Binding="{Binding PropertyDefinition.DisplayOrder, Mode=TwoWay}" Header="Disp.Order"/>
                            <DataGridCheckBoxColumn Binding="{Binding Exclude, Mode=TwoWay}" Header="Exclude" />
                            <DataGridCheckBoxColumn Binding="{Binding HasValidation, Mode=TwoWay}" Header="Has Validation" Width="60" />
                            <DataGridCheckBoxColumn Binding="{Binding UseInSearch, Mode=TwoWay}" Header="Search" />
                            <DataGridCheckBoxColumn Binding="{Binding InIndexView, Mode=TwoWay}" Header="InIndex" />
                            <DataGridCheckBoxColumn Binding="{Binding InDetailsView, Mode=TwoWay}" Header="InDetails" />
                            <DataGridCheckBoxColumn Binding="{Binding InCreateView, Mode=TwoWay}" Header="InCreate" />
                            <DataGridCheckBoxColumn Binding="{Binding InEditView, Mode=TwoWay}" Header="InEdit" />
                            <DataGridTemplateColumn Header="Use for Edit" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding UseForEdit}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding UseForEditList}" SelectedItem="{Binding UseForEdit}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Name="mnuPropertyOptions"  Header="Options" IsEnabled="False" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>

                    <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="8" ResizeDirection="Rows" />

                    <StackPanel Grid.Row="2" Height="20" VerticalAlignment="Top" Orientation="Horizontal">
                        <TextBlock Text="Display Columns:" VerticalAlignment="Center"/>
                        <ComboBox ItemsSource="{Binding Source={StaticResource mvcViewTypes}}"
                                  SelectedItem="{Binding FilterViewType}"
                                  Width="120" Margin="8,0,0,0" />
                    </StackPanel>
                    <DataGrid ItemsSource="{Binding FilteredDisplayColumns, Mode=OneWay}"
                              Grid.Row="2"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False" IsReadOnly="True"
                              CanUserDeleteRows="False" ToolTip="Display Columns" Margin="0,20,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Name}" Header="Property Name" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Binding="{Binding PropertyDefinition.EntityDefinition.Name}" Header="Entity Name" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Binding="{Binding PropertyDefinition.DisplayOrder, Mode=TwoWay}" Header="Disp.Order"/>
                            <DataGridCheckBoxColumn Binding="{Binding HasValidation, Mode=TwoWay}" Header="Has Validation" Width="60" />
                            <DataGridCheckBoxColumn Binding="{Binding UseInSearch, Mode=TwoWay}" Header="Search" />
                            <DataGridCheckBoxColumn Binding="{Binding InIndexView, Mode=TwoWay}" Header="IndexView" />
                            <DataGridCheckBoxColumn Binding="{Binding InDetailsView, Mode=TwoWay}" Header="InDetails" />
                            <DataGridCheckBoxColumn Binding="{Binding InCreateView, Mode=TwoWay}" Header="InCreate" />
                            <DataGridCheckBoxColumn Binding="{Binding InEditView, Mode=TwoWay}" Header="InEdit" />
                            <DataGridTextColumn Binding="{Binding UseForEdit, Mode=TwoWay}" Header="Use For Edit" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</local:AbstractEngineUI>
