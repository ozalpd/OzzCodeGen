<local:AbstractEngineUI x:Class="OzzCodeGen.CodeEngines.AspNetMvc.UI.MvcEngineUI"
                        xmlns:local="clr-namespace:OzzCodeGen.UI"
                        xmlns:System="clr-namespace:System;assembly=mscorlib"
                        xmlns:AspNetMvc="clr-namespace:OzzCodeGen.CodeEngines.AspNetMvc"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:Converters="clr-namespace:OzzUtils.Wpf.Converters;assembly=OzzUtils"
                        mc:Ignorable="d" d:DesignHeight="720" d:DesignWidth="1024">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="mvcViewTypes" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="AspNetMvc:MvcFilterType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="indexViewGeneration" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="AspNetMvc:IndexViewGeneration" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Converters:BoolInverter x:Key="boolInverter"/>
        <Converters:BoolToColor x:Key="invertTrueToPinkBG" ColorForFalseValue="White" ColorForTrueValue="#FFFFCFCF" />
        <Converters:EnumDescriptionConverter x:Key="enumConverter" />
        <Style x:Key="topbarButtons" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="122" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="4,4,0,0"/>
        </Style>
        <Style x:Key="CellRightAlign">
            <Setter Property="Control.HorizontalAlignment" Value="Stretch" />
            <Setter Property="TextBlock.TextAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FFB0C4DE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128"/>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition Width="*" MaxWidth="132"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" MaxWidth="132"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TopBar TabControl -->
        <TabControl TabStripPlacement="Left"
                    Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="5"
                    Padding="2" Margin="0,4,4,0"
                    BorderBrush="#FFB0CFEF">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#FFB0C4DE"/>
                    <Setter Property="BorderBrush" Value="#AFFF"/>
                </Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Orientation" Value="Horizontal"/>
                    <Setter Property="Background" Value="#30B0C4DE"/>
                </Style>
                <Style TargetType="Grid">
                    <Setter Property="Background" Value="#30B0C4DE"/>
                </Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Height" Value="24" />
                    <Setter Property="Margin" Value="4,0"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Margin" Value="4,0,0,0"/>
                </Style>
                <Style TargetType="RadioButton">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Margin" Value="4,0"/>
                </Style>
            </TabControl.Resources>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="File System" ToolTip="Folder names &amp; paths for target files"/>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MaxWidth="132"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*" MaxWidth="132"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Target Project Folder:" Grid.Column="0" Grid.Row="0"/>
                    <TextBox Name="txtTargetDirectory" Text="{Binding TargetFolder, Mode=TwoWay}" ToolTip="{Binding TargetDirectory}" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Snippets Folder:" Grid.Column="2" Grid.Row="0"/>
                    <TextBox Text="{Binding SnippetsFolder, Mode=TwoWay}" ToolTip="{Binding SnippetsDir}" Grid.Row="0" Grid.Column="3"/>

                    <TextBlock Text="Controllers Folder:" Grid.Column="0" Grid.Row="1"/>
                    <TextBox Text="{Binding TargetControllersFolder, Mode=TwoWay}" ToolTip="{Binding TargetControllersDir}" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Models Folder:" Grid.Column="0" Grid.Row="2"/>
                    <TextBox Text="{Binding TargetModelsFolder, Mode=TwoWay}" ToolTip="{Binding TargetModelsDir}" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Views Folder:" Grid.Column="0" Grid.Row="3"/>
                    <TextBox Text="{Binding TargetViewsFolder, Mode=TwoWay}" ToolTip="{Binding TargetViewsDir}" Grid.Row="3" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Controllers" ToolTip="Related for APS.NET MVC controller files to be generated"/>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MaxWidth="132"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*" MaxWidth="132"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*" MaxWidth="132"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Models Namespace:" Grid.Column="2" Grid.Row="0"/>
                    <TextBox Text="{Binding ModelsNamespace, Mode=TwoWay}" Grid.Row="0" Grid.Column="3"/>

                    <TextBlock Text="Data Model Namespace:" ToolTip="Namespace for data model classes" Grid.Column="4" Grid.Row="0"/>
                    <TextBox Text="{Binding DataModelsNamespace, Mode=TwoWay}" Grid.Column="5" Grid.Row="0"/>

                    <TextBlock Text="Controllers Namespace:" ToolTip="Namespace for controller classes" Grid.Column="0" Grid.Row="0"/>
                    <TextBox Text="{Binding ControllersNamespace, Mode=TwoWay}" Grid.Column="1" Grid.Row="0"/>

                    <TextBlock Text="Base Controller:" ToolTip="Base class name for application's controllers" Grid.Column="0" Grid.Row="1"/>
                    <TextBox Text="{Binding BaseControllerName, Mode=TwoWay}" Grid.Column="1" Grid.Row="1"/>

                    <TextBlock Text="Base Controller's Base:" ToolTip="Base class name for application's base controller" Grid.Column="2" Grid.Row="1"/>
                    <TextBox Text="{Binding BaseOfBaseController, Mode=TwoWay}" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="1"/>

                    <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Background="#FFFFF0A0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="132"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*" MaxWidth="132"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Save Parameter:">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{Binding DataContextInstance, StringFormat='Parameter for Save and SaveAsync methods of \{0\} property'}"/>
                            </TextBlock.ToolTip>
                    </TextBlock>
                        <TextBox Text="{Binding SaveParameter, Mode=TwoWay}" Grid.Column="1"/>
                        <Button Content="Set to Controllers"
                                ToolTip="Set SaveParameter to all controllers"
                                Margin="2" Grid.Column="2"
                                Click="btnSetToControllers_Click"/>
                    </Grid>

                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                        <TextBlock Text="{Binding DataContextInstance, StringFormat='\{0\} Property'}" MinWidth="120"/>
                        <RadioButton Content="Generate"
                                     IsChecked="{Binding GenerateDataContext}" 
                                     ToolTip="Generate property in controllers"/>
                        <RadioButton Content="Exists in BaseClass"
                                     IsChecked="{Binding GenerateDataContext, Converter={StaticResource boolInverter}}"
                                     ToolTip="Do not generate property. It's already present in the base controller class."/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Grid.ColumnSpan="4" Grid.Row="3"></StackPanel>
                    <TextBlock Text="Data Context Instance:" ToolTip="Instance name for data repository or data context in BaseController or controllers" Grid.Column="2" Grid.Row="3"/>
                    <TextBox Text="{Binding DataContextInstance, Mode=TwoWay}" Grid.Column="3" Grid.Row="3"/>

                    <TextBlock Text="Data Context Class:" ToolTip="Data repository or data context class name" Grid.Column="4" Grid.Row="3"/>
                    <TextBox Text="{Binding DataContextClass, Mode=TwoWay}" Grid.Column="5" Grid.Row="3"/>

                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Security" ToolTip="Security &amp; SecurityRoles related"/>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MaxWidth="132"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*" MaxWidth="132"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*" MaxWidth="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="0,4,4,4"/>
                            </Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Margin" Value="4,8"/>
                            </Style>
                        </Grid.Resources>
                        <CheckBox IsChecked="{Binding AreCanUserMethodsPublic}"
                                  Content="CanUser Methods are Public"
                                  ToolTip="If checked; Access Modifiers of CanUserView, CanUserEdit, etc. methods are public"/>
                        <Button Content="Set Roles to Controllers"
                                ToolTip="Sets project's View, Create, Edit, Delete role names to every entity's controller"
                                Grid.Column="2"
                                Click="btnSetRolesToControllers_Click"/>
                        <Button Content="Render Roles Class"
                                ToolTip="Render static class SecurityRoles"
                                Grid.Column="3"
                                Click="btnRenderRolesClass_Click"/>
                        <Button Content="Refresh Roles"
                                Grid.Column="4"
                                Click="btnRefreshRoles_Click"/>
                    </Grid>
                    
                    <Grid Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="4" Background="#20A0FFD0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="132"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*" MaxWidth="132"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Admin Role:" ToolTip="Role name of application's Administrator" Grid.Column="0" Grid.Row="0"/>
                        <TextBox Text="{Binding AdminRole}" ToolTip="Role name of application's Administrator" Grid.Column="1" Grid.Row="0"/>

                        <TextBlock Text="Roles Can View" Grid.Column="0" Grid.Row="1"/>
                        <TextBox Text="{Binding RolesCanView}" Grid.Column="1" Grid.Row="1"/>
                        <TextBlock Text="Roles See Restricted" ToolTip="Roles who can see restricted data" Grid.Column="0" Grid.Row="2"/>
                        <TextBox Text="{Binding RolesCanSeeRestricted}" ToolTip="Roles who can see restricted data" Grid.Column="1" Grid.Row="2"/>

                        <TextBlock Text="Roles Can Create" Grid.Column="2" Grid.Row="0"/>
                        <TextBox Text="{Binding RolesCanCreate}" Grid.Column="3" Grid.Row="0"/>
                        <TextBlock Text="Roles Can Edit" Grid.Column="2" Grid.Row="1"/>
                        <TextBox Text="{Binding RolesCanEdit}" Grid.Column="3" Grid.Row="1"/>
                        <TextBlock Text="Roles Can Delete" Grid.Column="2" Grid.Row="4"/>
                        <TextBox Text="{Binding RolesCanDelete}" Grid.Column="3" Grid.Row="4"/>
                    </Grid>

                    <Grid Grid.Column="4" Grid.Row="0" Grid.RowSpan="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="32"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="32"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBox Name="txtAddRole" Grid.Column="0"/>
                        <Button Name="btnRemoveRole" Content="-"
                                Grid.Row="1" Grid.Column="1" Margin="2"
                                Click="btnRemoveRole_Click"/>
                        <Button Name="btnAddRole" Content="+"
                                Grid.Row="0" Grid.Column="1" Margin="2"
                                Click="btnAddRole_Click"/>
                        <ListBox Name="lstSecurityRoles"
                                 ItemsSource="{Binding SecurityRoles}"
                                 Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Margin="4,0" MouseDoubleClick="lstSecurityRoles_MouseDoubleClick"/>
                    </Grid>

                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Views &amp; VMs" ToolTip="View &amp; ViewModel related"/>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MaxWidth="160"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*" MaxWidth="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Views Namespace:" ToolTip="Namespace of views" Grid.Column="0" Grid.Row="0"/>
                    <TextBox Text="{Binding ViewsNamespace, Mode=TwoWay}" Grid.Column="1" Grid.Row="0"/>

                    <TextBlock Text="ViewModels Namespace:" ToolTip="Namespace of data ViewModel classes" Grid.Column="0" Grid.Row="1"/>
                    <TextBox Text="{Binding ViewModelsNamespace, Mode=TwoWay}" Grid.Column="1" Grid.Row="1"/>

                    <TextBlock Text="Addt. Namespaces for Views:" ToolTip="Additional namespaces for views (cshtml forms)" Grid.Column="0" Grid.Row="2"/>
                    <TextBox Text="{Binding AddtNamespacesForView, Mode=TwoWay}" Grid.Column="1" Grid.Row="2"/>

                </Grid>
            </TabItem>
        </TabControl>
        <!--// TopBar TabControl -->

        <!-- TopBar Buttons -->
        <Button Name="btnRefresh" Content="Refresh"
                Grid.Row="0" Grid.Column="0"
                Style="{StaticResource topbarButtons}"
                Click="btnRefresh_Click"/>

        <Button Name="btnRenderAllTemplates"
                Content="Render All Templates" 
                IsEnabled="{Binding CanRender}"
                Grid.Row="1" Grid.Column="0"
                Style="{StaticResource topbarButtons}"
                Click="btnRenderAllTemplates_Click"/>

        <Button Name="btnRenderTemplate"
                Content="Render Template"
                IsEnabled="{Binding CanRender}"
                Grid.Column="0" Grid.Row="2" Grid.RowSpan="2"
                Style="{StaticResource topbarButtons}"
                Click="btnRenderTemplate_Click"/>

        <StackPanel Orientation="Horizontal"
                        Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                        Background="#40FFFFFF" Margin="4,2,44,2">
            <TextBlock Text="Template:" VerticalAlignment="Center" Margin="4,0,16,0"/>
            <ComboBox ItemsSource="{Binding Templates}"
                      SelectedItem="{Binding SelectedTemplate}"
                      Width="200" Height="24" HorizontalAlignment="Left"/>
        </StackPanel>

        <CheckBox IsChecked="{Binding RenderAllEntities}"
                      Content="Render All Entities"
                      Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                      VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4,4,0,0"
                      ToolTip="Render for every entity in the model." />
        <!--// TopBar Buttons -->

        <!-- Grid of data grids -->
        <Grid Grid.Row="8" Grid.ColumnSpan="6" Margin="4,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="420"/>
                <ColumnDefinition Width="3*" MinWidth="420"/>
            </Grid.ColumnDefinitions>
            <DataGrid Name="grdEntitySettings" ItemsSource="{Binding Entities, Mode=TwoWay}" 
                      SelectedItem="{Binding CurrentEntitySetting, Mode=TwoWay}"
                      AutoGeneratedColumns="grdEntitySettings_AutoGeneratedColumns"
                      CanUserDeleteRows="False" CanUserAddRows="False"
                      AutoGeneratingColumn="grdEntitySettings_AutoGeneratingColumn">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Name="mnuEntityOptions"  Header="Reset All Required Msgs" Click="mnuEntityOptions_Click" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>

            <GridSplitter Grid.Column="1" Grid.RowSpan="4" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="9" ResizeDirection="Columns" />
            <TabControl Grid.Column="1" Margin="9,0,0,0" Background="#FFB0C4DE">
                <TabItem Header="Details">
                    <Grid DataContext="{Binding SelectedItem, ElementName=grdEntitySettings}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="186"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="#FF206080"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Margin" Value="2,0"/>
                            </Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Margin" Value="4,2,0,1"/>
                            </Style>
                        </Grid.Resources>
                        <Border Grid.RowSpan="2">
                            <StackPanel>
                                <StackPanel Background="#FFFFB040">
                                    <TextBlock Text="Target File"
                                               TextAlignment="Center"
                                               Padding="2" Margin="0" Height="20"
                                               Background="#FFFFDA80"/>
                                    <CheckBox IsChecked="{Binding OverwriteExisting}"
                                              Content="Overwrite"
                                              ToolTip="Overwrite existing file"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Generate" TextAlignment="Center" Background="#D0FFFFFF"/>
                                <CheckBox IsChecked="{Binding GenerateController}" Content="Controller" ToolTip="Generate controller for this entity"/>
                                <CheckBox IsChecked="{Binding SealedController}" Content="Sealed Controller" ToolTip="Generate sealed type controller class"/>
                                <CheckBox IsChecked="{Binding GenerateGetQueryMethod}" Content="GetEntityQuery">
                                    <CheckBox.ToolTip>
                                        <TextBlock Text="{Binding Name, StringFormat='Generate Get\{0\}Query(QueryParameters qParams) method in controller'}"/>
                                    </CheckBox.ToolTip>
                                </CheckBox>
                                <CheckBox IsChecked="{Binding GenerateGetDtoQueryMethod}" Content="GetEntityDtoQuery">
                                    <CheckBox.ToolTip>
                                        <TextBlock Text="{Binding Name, StringFormat='Generate Get\{0\}DtoQuery(QueryParameters qParams) method in controller'}"/>
                                    </CheckBox.ToolTip>
                                </CheckBox>
                                <CheckBox IsChecked="{Binding GenerateGetEntityAction}" Content="GetEntity Action" ToolTip="Generate GetEntity action in controller"/>
                                <CheckBox IsChecked="{Binding GenerateGetEntityListAction}" Content="GetEntityList Action" ToolTip="Generate GetEntityList action in controller"/>
                                <CheckBox IsChecked="{Binding GenerateActionForAutoComplete}" Content="Action For AutoComplete" ToolTip="Generate GetEntitiesForAutoComplete action in controller"/>
                                <StackPanel Background="#FFD0E4FE" Margin="0,2,0,0">
                                    <CheckBox IsChecked="{Binding GenerateIndexAction}" Content="Index Action" ToolTip="Generate Index action in controller"/>
                                    <CheckBox IsChecked="{Binding GenerateDetailsAction}" Content="Details Action" ToolTip="Generate Details action in controller"/>
                                    <CheckBox IsChecked="{Binding GenerateCreateAction}" Content="Create Action" ToolTip="Generate Create action in controller"/>
                                    <CheckBox IsChecked="{Binding GenerateEditAction}" Content="Edit Action" ToolTip="Generate Edit action in controller"/>
                                    <CheckBox IsChecked="{Binding GenerateDeleteAction}" Content="Delete Action" ToolTip="Generate Delete action in controller"/>
                                </StackPanel>
                                <StackPanel Background="#FFD8F0F8" Margin="0,2,0,0">
                                    <CheckBox IsChecked="{Binding IndexView}" Content="Index View" ToolTip="Generate Index view"/>
                                    <ComboBox ItemsSource="{Binding Source={StaticResource indexViewGeneration}}"
                                              SelectedItem="{Binding IndexViewGeneration}"
                                              FontSize="11" Margin="4,0,0,0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource enumConverter}}"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <TextBlock Height="2" Margin="1"/>
                                    <CheckBox IsChecked="{Binding DetailsView}" Content="Details View" ToolTip="Generate Details view"/>
                                    <CheckBox IsChecked="{Binding DetailsPartialView}" Content="Partial Details View" ToolTip="Generate Details view with a partial _Details"/>
                                    <CheckBox IsChecked="{Binding CreateView}" Content="Create View" ToolTip="Generate Create view"/>
                                    <CheckBox IsChecked="{Binding CreatePartialView}" Content="Partial Create View" ToolTip="Generate Create view with a partial _Create"/>
                                    <CheckBox IsChecked="{Binding EditView}" Content="Edit View" ToolTip="Generate Edit view"/>
                                    <CheckBox IsChecked="{Binding EditPartialView}" Content="Partial Edit View " ToolTip="Generate Edit view with a partial _Edit"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Grid Grid.Column="1">
                        <Grid.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Height" Value="19"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Background" Value="#A0FFFFFF"/>
                                <Setter Property="Margin" Value="0,4,1,0"/>
                                <Setter Property="Padding" Value="4,1"/>
                            </Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Margin" Value="0,0,1,0"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                            <Border Grid.Column="0">
                                <StackPanel Background="#FFFFD080">
                                    <TextBlock Text="Authorization Roles"
                                               TextAlignment="Center"
                                               Padding="4, 12" Margin="0" Height="40"/>
                                    <TextBlock Text="Roles Can View"/>
                                    <TextBox Text="{Binding RolesCanView}"/>
                                    <TextBlock Text="Roles Can Create"/>
                                    <TextBox Text="{Binding RolesCanCreate}"/>
                                    <TextBlock Text="Roles Can Edit"/>
                                    <TextBox Text="{Binding RolesCanEdit}"/>
                                    <TextBlock Text="Roles Can Delete"/>
                                    <TextBox Text="{Binding RolesCanDelete}"/>
                                    <TextBlock Text="Roles Can See RestrictedData" ToolTip="Roles who can see restricted data"/>
                                    <TextBox Text="{Binding RolesCanSeeRestricted}" ToolTip="Roles who can see restricted data"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="1">
                            <StackPanel Background="#FF90E070">
                                <TextBlock Text="Controller Name" Margin="0"/>
                                <TextBox Text="{Binding ControllerName}"/>

                                <TextBlock Text="Index Model Class" ToolTip="Model class for Index action."/>
                                <TextBox Text="{Binding ModelForIndex}" ToolTip="Model class or ViewModel for Index action."/>

                                <TextBlock Text="JSON Model Class" ToolTip="ViewModel class for JSON Result actions."/>
                                <TextBox Text="{Binding ModelForJson}" ToolTip="Model or ViewModel class for JSON Result actions."/>

                                <TextBlock Text="Create Model Class" ToolTip="Model class for Create action."/>
                                <TextBox Text="{Binding ModelForCreate}" ToolTip="Model class or ViewModel for Create action."/>

                                <TextBlock Text="Edit Model Class" ToolTip="Model class for Edit action."/>
                                <TextBox Text="{Binding ModelForEdit}" ToolTip="Model class or ViewModel for Edit action."/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2">
                            <StackPanel Background="#FF80D0D0">
                                <TextBlock Text="Controller Base Class" ToolTip="Base class for controller to generated." Margin="0"/>
                                <TextBox Text="{Binding BaseControllerName}" ToolTip="Base class for controller to generated."/>
                                
                                <TextBlock Text="Area" ToolTip="Area of views &amp; controllers"/>
                                <TextBox Text="{Binding Area}" ToolTip="Area of views &amp; controllers"/>

                                <TextBlock Text="Dataset Name" ToolTip="Dataset for entity"/>
                                <TextBox Text="{Binding DataSetName}" ToolTip="Dataset for entity"/>
                                
                                <TextBlock Text="Save Parameter">
                                    <TextBlock.ToolTip>
                                        <TextBlock Text="{Binding CodeEngine.DataContextInstance, StringFormat='Parameter for Save and SaveAsync methods of \{0\} property'}"/>
                                    </TextBlock.ToolTip>
                                            </TextBlock>
                                <TextBox Text="{Binding SaveParameter}">
                                    <TextBox.ToolTip>
                                        <TextBlock Text="{Binding CodeEngine.DataContextInstance, StringFormat='Parameter for Save and SaveAsync methods of \{0\} property'}"/>
                                    </TextBox.ToolTip>
                                </TextBox>

                                <TextBlock Text="Strong Depended ForeignKey" ToolTip="ForeignKey may be used in Create action"/>
                                <TextBox Text="{Binding StrongDependedForeignKey}" ToolTip="ForeignKey may be used in Create action"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Margin="2,4,2,0">
                            <StackPanel>
                                <TextBlock Text="FillSelectLists Method Name(s)"
                                           ToolTip="In Create &amp; Edit actions method or methods for preparing SelectLists"
                                           Margin="0"/>
                                <TextBox Text="{Binding FillSelectListsMethod}"/>
                                <TextBlock Text="Create Action Redirect" ToolTip="Where to redirect at the end of CreateAction"/>
                                <TextBox Text="{Binding CreateRedirect}"/>
                                <TextBlock Text="Edit Action Redirect" ToolTip="Where to redirect at the end of EditAction"/>
                                <TextBox Text="{Binding EditRedirect}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                
                    </Grid>
                </TabItem>
                <TabItem Header="Properties">
                    <Grid DataContext="{Binding SelectedItem, ElementName=grdEntitySettings}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="9"/>
                            <RowDefinition Height="4*"/>
                        </Grid.RowDefinitions>
                        <DataGrid Name="grdPropertySettings"
                            ItemsSource="{Binding Properties, Mode=TwoWay}"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Name}" Header="Property Name" Width="120" IsReadOnly="True"/>
                                <DataGridTextColumn Binding="{Binding PropertyDefinition.DisplayOrder, Mode=TwoWay}" Header="Disp.Order" CellStyle="{StaticResource CellRightAlign}"/>
                                <DataGridCheckBoxColumn Binding="{Binding Exclude, Mode=TwoWay}" Header="Exclude" />
                                <DataGridCheckBoxColumn Binding="{Binding PropertyDefinition.RestrictedData, Mode=TwoWay}" Header="Restricted Data" Width="60" />
                                <DataGridCheckBoxColumn Binding="{Binding HasValidation, Mode=TwoWay}" Header="Has Validation" Width="60" />
                                <DataGridCheckBoxColumn Binding="{Binding UseInSearch, Mode=TwoWay}" Header="Search" />
                                <DataGridCheckBoxColumn Binding="{Binding InIndexView, Mode=TwoWay}" Header="InIndex" />
                                <DataGridCheckBoxColumn Binding="{Binding InDetailsView, Mode=TwoWay}" Header="InDetails" />
                                <DataGridCheckBoxColumn Binding="{Binding InCreateView, Mode=TwoWay}" Header="InCreate" />
                                <DataGridCheckBoxColumn Binding="{Binding InEditView, Mode=TwoWay}" Header="InEdit" />
                                <DataGridTemplateColumn Header="Use for Create" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding UseForCreate}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding UseForEditList}" SelectedItem="{Binding UseForCreate}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Use for Edit" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding UseForEdit}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding UseForEditList}" SelectedItem="{Binding UseForEdit}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Name="mnuPropertyOptions"  Header="Options" IsEnabled="False" />
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>

                        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Height="9" ResizeDirection="Rows" />

                        <Border Grid.Row="2" Height="24" VerticalAlignment="Top"
                                Background="#ffe0c0" BorderBrush="#404040" BorderThickness="1,1,1,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Display Properties:" Margin="4,0" VerticalAlignment="Center" />
                                <ComboBox ItemsSource="{Binding Source={StaticResource mvcViewTypes}}"
                                          SelectedItem="{Binding FilterViewType}"
                                          Width="160" Margin="4,1">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource enumConverter}}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                        </StackPanel>
                        </Border>
                        <DataGrid ItemsSource="{Binding FilteredDisplayColumns, Mode=OneWay}"
                                  ToolTip="Display Columns"
                                      Grid.Row="2" Margin="0,22,0,0" Background="#ffe0c0"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False" IsReadOnly="True"
                                      CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Property Name">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" ToolTip="If RestrictedData seen with pink background"
                                                       Background="{Binding PropertyDefinition.RestrictedData, Converter={StaticResource invertTrueToPinkBG}}"
                                                       Foreground="#222"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Binding="{Binding PropertyDefinition.EntityDefinition.Name}" Header="Member Of" Width="120" IsReadOnly="True"/>
                                <DataGridTextColumn Binding="{Binding PropertyDefinition.DisplayOrder, Mode=TwoWay}" Header="Disp.Order" CellStyle="{StaticResource CellRightAlign}"/>
                                <DataGridCheckBoxColumn Binding="{Binding HasValidation, Mode=TwoWay}" Header="Has Validation" Width="60" />
                                <DataGridCheckBoxColumn Binding="{Binding UseInSearch, Mode=TwoWay}" Header="Search" />
                                <DataGridCheckBoxColumn Binding="{Binding InIndexView, Mode=TwoWay}" Header="IndexView" />
                                <DataGridCheckBoxColumn Binding="{Binding InDetailsView, Mode=TwoWay}" Header="InDetails" />
                                <DataGridCheckBoxColumn Binding="{Binding InCreateView, Mode=TwoWay}" Header="InCreate" />
                                <DataGridCheckBoxColumn Binding="{Binding InEditView, Mode=TwoWay}" Header="InEdit" />
                                <DataGridTextColumn Binding="{Binding UseForCreate, Mode=TwoWay}" Header="Use For Create" />
                                <DataGridTextColumn Binding="{Binding UseForEdit, Mode=TwoWay}" Header="Use For Edit" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</local:AbstractEngineUI>
