<local:AbstractEngineUI x:Class="OzzCodeGen.CodeEngines.Storage.UI.StorageEngineUI"
                        xmlns:local="clr-namespace:OzzCodeGen.UI"
                        xmlns:System="clr-namespace:System;assembly=mscorlib"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:converter="clr-namespace:OzzUtils.Wpf.Converters;assembly=OzzUtils"
                        xmlns:storage="clr-namespace:OzzCodeGen.CodeEngines.Storage"
                        mc:Ignorable="d" d:DesignHeight="320" d:DesignWidth="800">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="sprocGeneration" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="storage:StoredProcGeneration" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <converter:EnumDescriptionConverter x:Key="enumConverter" />
    </UserControl.Resources>
    <Border BorderBrush="#FFDAA200" BorderThickness="1" Padding="1,0" Background="#FFFFEBCB">
        <Grid>
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="2"/>
                </Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Height" Value="24"/>
                    <Setter Property="Margin" Value="2,0"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*" MaxWidth="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" MaxWidth="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Name="btnRefresh" Content="Refresh" 
                    Grid.Row="0" Grid.Column="0"
                    Click="btnRefresh_Click"/>
            <Button Name="btnRenderTemplate" Content="Render"
                    ToolTip="Render Selected Template"
                    Grid.Column="0" Grid.Row="1"
                    Click="btnRenderTemplate_Click"/>
            <Button Name="btnCreateDB" Content="Create DB"
                    ToolTip="Render all tables and CreateDB batch file"
                    Grid.Column="0" Grid.Row="2" Grid.RowSpan="2"
                    Click="btnCreateDB_Click"/>

            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Margin="0,3,0,0">
                <StackPanel.Resources>
                    <Style TargetType="CheckBox">
                        <Setter Property="Margin" Value="4,3,0,3"/>
                    </Style>
                </StackPanel.Resources>
                <CheckBox IsChecked="{Binding PluralizeTableNames}" Content="Pluralize Table Names"/>
                <CheckBox IsChecked="{Binding RenderAllEntities}" Content="All Entities"
                          ToolTip="Render for every entity in the model."/>
                <CheckBox IsChecked="{Binding OverwriteExisting}" Content="Overwrite Existing Files"/>
                <CheckBox IsChecked="{Binding PutCommentsIntoScripts}" Content="Put Comments"
                          ToolTip="Put Comments Into Scripts"/>
            </StackPanel>

            <TextBlock Text="Database Server:" Grid.Column="2" Grid.Row="0"/>
            <TextBox Text="{Binding DatabaseServer, Mode=TwoWay}" 
                     Grid.Column="3" Grid.Row="0"/>

            <TextBlock Text="Database Name:" Grid.Column="2" Grid.Row="1"/>
            <TextBox Text="{Binding DatabaseName, Mode=TwoWay}" 
                     Grid.Column="3" Grid.Row="1"/>

            <TextBlock Text="After Execute Scripts:"
                       ToolTip="Script files will be executed after creating database."
                       Grid.Column="4" Grid.Row="1"/>
            <TextBox Text="{Binding AfterScripts, Mode=TwoWay}"
                     ToolTip="File names must be seperated by ';' a semicolon"
                     Grid.Column="5" Grid.Row="1"/>

            <TextBlock Text="Before Execute Scripts:"
                       ToolTip="Script files will be executed before creating database."
                       Grid.Column="4" Grid.Row="0"/>
            <TextBox Text="{Binding BeforeScripts, Mode=TwoWay}" 
                     ToolTip="File names must be seperated by ';' a semicolon"
                     Grid.Column="5" Grid.Row="0"/>

            <TextBlock Text="Target Folder:" Grid.Column="2" Grid.Row="2"/>
            <TextBox Text="{Binding TargetFolder, Mode=TwoWay}" 
                     ToolTip="{Binding TargetDirectory}"
                     Grid.Column="3" Grid.Row="2"/>

            <Grid Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MaxWidth="120"/>
                    <ColumnDefinition Width="*" MaxWidth="90"/>
                    <ColumnDefinition Width="*" MaxWidth="120"/>
                    <ColumnDefinition Width="*" MaxWidth="90"/>
                    <ColumnDefinition Width="*" MaxWidth="120"/>
                    <ColumnDefinition Width="*" MaxWidth="90" />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Margin" Value="4,6,0,6"/>
                    </Style>
                </Grid.Resources>
                <TextBlock Text="Schema Name" ToolTip="Default schema name for tables" Grid.Column="0" />
                <TextBox Text="{Binding SchemaName}" ToolTip="Default schema name for tables" Grid.Column="1" />

                <TextBlock Text="Log Schema" ToolTip="Log Schema Name" Grid.Column="2"/>
                <TextBox Text="{Binding LogSchemaName}" ToolTip="Log Schema Name" Grid.Column="3"/>
            </Grid>



            <Border Grid.Row="8" Grid.ColumnSpan="6" Margin="-1,0" Background="#FFFFF4D4" BorderBrush="#FFDAA200" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="184"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid Name="grdEntitySettings" ItemsSource="{Binding Entities, Mode=TwoWay}" 
                          SelectedItem="{Binding CurrentEntitySetting, Mode=TwoWay}"
                          AutoGeneratedColumns="grdEntitySettings_AutoGeneratedColumns"
                          CanUserDeleteRows="False" CanUserAddRows="False" AutoGeneratingColumn="grdEntitySettings_AutoGeneratingColumn">
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Name="mnuEntityOptions"  Header="Options" IsEnabled="False" />
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                        <Grid DataContext="{Binding SelectedItem, ElementName=grdEntitySettings}" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding Name, FallbackValue=No Selection}"
                                   Grid.ColumnSpan="2" Grid.Row="0"
                                   Padding="3" Margin="0"
                                   ToolTip="{Binding Name}"
                                   VerticalAlignment="Stretch"
                                   TextAlignment="Center"
                                   FontWeight="Bold">
                                <TextBlock.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#C0FFFFFF" Offset="0"/>
                                        <GradientStop Color="#A0E0E0E0" Offset="1"/>
                                    </RadialGradientBrush>
                                </TextBlock.Background>
                            </TextBlock>

                            <TextBlock Text="{Binding PrimaryKeyColumn, StringFormat=Primary Key: \{0\}}"
                                       Grid.ColumnSpan="2" Grid.Row="1"/>

                            <TextBlock Text="Overwrite Existing:" Grid.Row="2" Grid.Column="0"/>
                            <CheckBox IsChecked="{Binding OverwriteExisting}" Grid.Row="2" Grid.Column="1"/>

                            <TextBlock Text="Has Log Table:" ToolTip="Does this table have another log table?" Grid.Row="3" Grid.Column="0"/>
                            <CheckBox IsChecked="{Binding HasLogTable}" ToolTip="Does this table have another log table?" Grid.Row="3" Grid.Column="1"/>

                            <TextBlock Text="Stored Procedure Generation" ToolTip="Stored Procedures Generation" Grid.Row="5" Grid.ColumnSpan="2"/>
                            <ComboBox ItemsSource="{Binding Source={StaticResource sprocGeneration}}"
                                      SelectedItem="{Binding StoredProcGeneration}"
                                      Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                                      FontSize="11" Margin="2,0,0,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource enumConverter}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </Grid>
                    <GridSplitter Grid.Column="1" Grid.RowSpan="4" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="8"  ResizeDirection="Columns"/>

                    <Grid DataContext="{Binding SelectedItem, ElementName=grdEntitySettings}" Grid.Column="1" Margin="8,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="100"/>
                            <ColumnDefinition Width="*" MaxWidth="100"/>
                            <ColumnDefinition Width="*" MaxWidth="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Schema Name" Grid.Column="0" Grid.Row="0"/>
                        <TextBox Text="{Binding SchemaName}" Grid.Column="1" Grid.Row="0"/>

                        <TextBlock Text="Finishing Script Files"
                               ToolTip="Script files will be executed after create table script"
                               Grid.Column="2" Grid.Row="0"/>
                        <TextBox Text="{Binding FinishingScript}"
                             ToolTip="File names must be seperated by ';' a semicolon"
                             Grid.Column="3" Grid.Row="0"/>

                        <DataGrid Name="grdPropertySettings"
                              ItemsSource="{Binding Properties, Mode=TwoWay}" Grid.Row="1" 
                              CanUserAddRows="False" CanUserDeleteRows="False" 
                              AutoGeneratedColumns="grdPropertySettings_AutoGeneratedColumns" 
                              AutoGeneratingColumn="grdEntitySettings_AutoGeneratingColumn" Grid.ColumnSpan="6">

                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Name="mnuPropertyOptions"  Header="Options" IsEnabled="False" />
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</local:AbstractEngineUI>
